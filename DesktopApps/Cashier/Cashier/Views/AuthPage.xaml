<Page x:Class="Cashier.Views.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cashier.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" 
      d:DesignWidth="1920"
      Title="Authorization page" Style="{StaticResource AuthPageStyle}">
    <Grid>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Label Content="&#xf155;"
               Style="{StaticResource DollarLabelStyle}"/>
            <Ellipse x:Name="Round" Width="{Binding ElementName=Round, Path=ActualHeight}"
                Style="{StaticResource RoundStyle}">
            </Ellipse>
            <Label
               Content="&#xf155;"
               Style="{StaticResource DollarLabelStyle}"/>
        </StackPanel>
    </Grid>
</Page>
